<launch>

  <!-- A convenience launch file that launches all of the required nodes to
       plan and execute motions using RViz, MoveIt and the ros_control based
       KUKA RSI driver from the kuka_rsi_hw_interface package.
  -->
  <node pkg="agilus" name="gripper_action_server" type="gripper_action_server.py"/>

  <!-- Gripper -->
  <arg name="gripper" default="true" doc="Set to true if gripper is attached" />

  <!-- the "sim" argument controls whether we connect to a Simulated or Real robot -->
  <arg name="sim" default="true" doc="Use industrial robot simulator instead of real robot" />

  <!--  - if sim=false, a robot_ip argument is required -->
  <arg name="robot_ip" unless="$(arg sim)" doc="IP of controller (only required if not using industrial simulator)" />

  <!-- Remapping of joint states if gripper is attached -->
  <group if="$(arg gripper)">
    <node name="joint_state_remapper" pkg="agilus" type="jremap.py" />
    <rosparam file="$(find kuka_piezo_gripper_moveit_config)/config/gripper_state.yaml" command="load" />
  </group>

  <!-- By default, we do not start a database (it can be large) -->
  <arg name="db" default="false" doc="Start the MoveIt database" />
  <!-- Allow user to specify database location -->
  <arg name="db_path" default="$(find kuka_piezo_gripper_moveit_config)/default_warehouse_mongo_db" doc="Path to database files" />

  <!-- Non-standard joint names in ros_industrial -->
  <rosparam command="load" file="$(find kuka_kr10_support)/config/joint_names_kr10r1100sixx.yaml" />

  <!-- load the robot_description parameter before launching ROS-I nodes -->
  <include file="$(find kuka_piezo_gripper_moveit_config)/launch/planning_context.launch" >
    <arg name="load_robot_description" value="true" />
  </include>

  <!-- run the robot simulator and action interface nodes -->
  <group if="$(arg sim)">
    <remap from="joint_states" to="joint_states_kuka"/>
    <include file="$(find industrial_robot_simulator)/launch/robot_interface_simulator.launch" >
    </include>
  </group>

  <!-- run the "real robot" interface nodes -->
  <group unless="$(arg sim)">
    <!-- remap from="joint_states" to="joint_states_kuka"/ -->
    <include file="$(find kuka_kr10_support)/launch/robot_interface_streaming_kr10r1100sixx_rsi.launch" >
      <arg name="robot_ip" value="$(arg robot_ip)"/>
    </include>
  </group>

  <!-- publish the robot state (tf transforms) -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <include file="$(find kuka_piezo_gripper_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  <include file="$(find kuka_piezo_gripper_moveit_config)/launch/moveit_rviz.launch">
    <arg name="config" value="true"/>
  </include>

  <!-- If database loading was enabled, start mongodb as well -->
  <include file="$(find kuka_piezo_gripper_moveit_config)/launch/default_warehouse_db.launch" if="$(arg db)">
    <arg name="moveit_warehouse_database_path" value="$(arg db_path)"/>
  </include>

</launch>
